{
    "server": {
        "host": "0.0.0.0:80"
    },

    "routes": {
        "/": "./"
    },

    "static": {
        "directory": "./",
        "served_from": "/s",
        "error_pages": {
            "404": "404.html"
        }
    },

    "config": {
        "enable_hot_reload": false,
        "fast_mem_cache": true,
        "enable_cache_control": true,
        "enable_directory_listing": true,
        "minify_html": false,
        "follow_symlinks": false,
        "enable_logging": false
    }
}